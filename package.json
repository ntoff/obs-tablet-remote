{
  "name": "obs-tablet-remote",
  "version": "0.0.0",
  "description": "OBS Remote interface that's pretty okay I suppose",
  "homepage": "http://t2t2.github.io/obs-tablet-remote/",
  "repository": "https://github.com/t2t2/obs-tablet-remote",
  "author": "t2t2 <taavot@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "poi build",
    "build:deploy": "poi build --homepage /obs-tablet-remote/",
    "dev": "poi",
    "deploy": "npm-run-all build:deploy deploy:upload",
    "deploy:upload": "gh-pages -d dist",
    "lint": "xo"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "sanitize.css": "^5.0.0",
    "sha.js": "^2.4.10",
    "vue": "^2.5.13",
    "vuex": "^3.0.1",
    "vuex-persistedstate": "^2.4.2"
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.16.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-vue": "^4.2.0",
    "gh-pages": "^1.1.0",
    "loader-utils": "^1.1.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "poi": "^9.6.13",
    "postcss-flexbugs-fixes": "^3.3.0",
    "sass-loader": "^6.0.6",
    "uglify-js": "^3.3.9",
    "xo": "^0.18.2"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "semicolon": false,
    "plugins": [
      "vue"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "extensions": [
      "vue"
    ],
    "extends": [
      "plugin:vue/recommended"
    ],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": {
            "resolve": {
              "extensions": [
                "",
                ".js",
                ".json",
                ".vue"
              ]
            }
          }
        }
      }
    },
    "overrides": [
      {
        "files": "src/store/**/{actions,getters,mutations}.js",
        "rules": {
          "import/prefer-default-export": 0
        }
      }
    ]
  }
}
